/******************************************************************************

Find pairs of 2 arrays whose sum is equal to X
*******************************************************************************/
#include <stdio.h>
#include <iostream>
#include <set> 

using namespace std;

/* solution 1 
void findpairs(int *a, int *b, int az, int bz,int x)
{
    for(int i=0; i <az; i++)
        for(int j=0;j<bz;j++)
        {
            if( (a[i]+b[j]) == x )
              cout<<"pairs with sum "<<x<<" = "<<a[i]<<" "<<b[j]<<endl;
        }
    
}
*/

/* solution 2 */
void findpairs(int *a, int *b, int az, int bz,int x)
{
    set<int> s;
    for(int i=0;i<az;i++)
      s.insert(a[i]);
      
    for(int j=0;j<bz;j++)
    {
        auto it = s.find(x-b[j]);
        if( it != s.end() )
            cout<<"set pairs with sum "<<x<<" = "<<*it<<" "<<b[j]<<endl;
    }
    
}

int main()
{
    int a[] = { 1, 2 ,3, 4, 5};
    int b[] = { 5, 7 ,8, 2, 4};
    int a_size = sizeof(a)/sizeof(int);
    int b_size = sizeof(b)/sizeof(int);
    findpairs(a,b,a_size,b_size,8);

    return 0;
}
